
model {

  # Priors
  beta0 ~ dnorm(0, 1e-6)
  beta1 ~ dnorm(0, 1e-6)
  beta2 ~ dnorm(0, 1e-6)
  beta3 ~ dnorm(0, 1e-6)
  sigma ~ dunif(0, 10)
  tau <- 1 / (sigma * sigma)

  # Likelihood
  for (i in 1:n) {
    centroide[i] ~ dnorm(mu[i], tau)
    mu[i] <- beta0 + beta1 * vv[i] + beta2 * sp[i] +
             beta3 * sp[i] * vv[i]

  }
}

